<header class="sticky-top">
  <nav class='navbar navbar-expand-lg navbar-light bg-sub-color-gray shadow-sm'>
    <div class='container-fluid'>
      <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
        <li class='nav-item'>
          <%= link_to( new_user_path, class: 'header-left-btn' ) do %>
            <i class='bi bi-house-door-fill me-1'></i>
            ホーム
          <% end %>
        </li>
        <li class='nav-item'>
          <%= link_to( new_user_path, class: 'header-left-btn' ) do %>
            <i class="bi bi-card-text me-1"></i>
            投稿
          <% end %>
        </li>
        <li class='nav-item'>
          <%= link_to( new_user_path, class: 'header-left-btn' ) do %>
            <i class="bi bi-trophy me-1"></i>
            ランキング
          <% end %>
        </li>
      </ul>
      <div class='d-flex'>
        <% if logged_in? %>
          <%= link_to 'ログアウト', logout_path, method: :delete, class: 'btn btn-primary-green me-2' %>
          <%= link_to '設定', user_path(current_user), class: 'btn btn-primary-green me-2' %>
          <%= link_to( new_user_path, class: 'header-left-btn' ) do %>
            <i class="bi bi-person-circle me-1"></i>
            <%= current_user.name %>
          <% end %>
        <% else %>
          <%= link_to 'ログイン', login_path, class: 'btn btn-primary-green me-2' %>
          <button class='btn-primary-green me-2' type='submit'>ゲストログイン</button>
          <%= link_to '新規登録', new_user_path, class: 'btn btn-primary-green' %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
