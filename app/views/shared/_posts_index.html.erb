<% posts.each do |post| %>
  <div class='container row mb-5 shadow-sm p-4'>
    <div class='col-7'>
        <div class='row mb-3'>
          <div class='col-1 fs-1'>
            <i class="bi bi-person-circle"></i>
          </div>
          <div class='col-11 fs-4 '>
            <div><%= post.user.name %></div>
            <div><%= post.updated_at %></div>
          </div>
        </div>
        <div class='row mb-3'>
          <div class='fs-3'><%= link_to post.title, my_post_path(post), class: 'link-text text-main' %></div>
        </div>
    </div>
    <div class='col-5'>
      <%= image_tag post.photo.variant(resize_to_limit: [nil, 400]), class: 'responsive-image' if post.photo.attached? %>
    </div>
    <div>
      <span class='me-1'><i class="bi bi-heart text-main-red fs-4"></i></span>
      <span class='me-1'><i class="bi bi-hash"></i><%= post.baseball_team.name %></span>
      <span class='me-1'><i class="bi bi-hash"></i><%= post.baseball_park.name %></span>
      <span class='me-1'><i class="bi bi-hash"></i><%= post.category.name %></span>
    </div>
  </div>
<% end %>
<%= paginate posts, theme: 'bootstrap-5' %>
