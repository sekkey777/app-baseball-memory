<div class='conteiner'>
  <div class='row justify-content-center'>
    <div class='col-sm-8 shadow-sm text-main bg-sub-color-gray p-5 mt-sm-5 mb-3'>
      <div class='mb-sm-4'> 
        <h3 class='col-auto'><span class='display-5'>| </span>観戦記録をつける</h3>
      </div>
      <div class='row justify-content-center'>
        <div class='col-sm-4'>
          <div class='game-green text-center'>応援チーム</div>
          <div class='mb-2 form-control'><%= @game.home_team.name %></div>
          <div class=''><%= @game.home_team_score %></div>
        </div>
        <div class='col-sm-4'>
          <div class='game-draw text-center'>対戦チーム</div>
          <div class='mb-2'><%= @game.away_team.name %></div>
          <div class=''><%= @game.away_team_score %></div>
        </div>
      </div>
      <div class='row justify-content-center'>
        <div class='col-sm-4'>
          <div class='game-draw text-center'>試合日程</div>
          <div class='mb-2'><%= @game.date %></div>
        </div>
        <div class='col-sm-4'>
          <div class='game-draw text-center'>球場</div>
          <div class='mb-2'><%= @game.baseball_park.name %></div>
        </div>
        <div class='row mb-5'>
          <div class='col-sm-2'>投稿内容</div>
          <div class='col-sm-8'><%= @game.memo %></div>
        </div>
      </div>
    </div>
  </div>
</div>
