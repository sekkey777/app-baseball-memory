<div class='conteiner'>
  <div class='row justify-content-center'>
    <div class='col-sm-10 shadow-sm text-main bg-sub-color-gray p-5 mt-sm-5 mb-3'>
      <div class='mb-sm-4'> 
        <h3 class='col-auto'><span class='display-5'>| </span><%= current_user.name %></h3>
      </div>
      <div class='row mb-1 mb-sm-3 justify-content-center'>
        <div class='col-sm-4 text-center shadow-sm win_percentage'>勝率 <span class='number-size'><%= @games.win_percentage %></span> %</div>
        <% sequence_type, sequence_count = @games.current_sequence %>
        <div class='col-sm-4 text-center shadow-sm <%= sequence_type %>-sequence'>
          <% if sequence_type == 'win' %>
            <span class='number-size'><%= sequence_count %></span> 連勝中
          <% elsif sequence_type == 'lose' %>
            <span class='number-size'><%= sequence_count %></span> 連敗中
          <% elsif sequence_type == 'draw' %>
            <span class='number-size'><%= sequence_count %></span> 連分中
          <% else %>
            <%= "連勝・連敗・連続引き分けなし" %>
          <% end %>
        </div>
      </div> 
      <div class='row justify-content-center'>
        <div class='col-sm-2'>
          <div class='game-green text-center'>GAME</div>
          <div class='green-line text-center'><%= @games.count %></div>
        </div>
        <div class='col-sm-2'>
          <div class='game-win text-center'>WIN</div>
          <div class='win-line text-center'><%= @games.win_count %></div>
        </div>
        <div class='col-sm-2'>
          <div class='game-lose text-center'>LOSE</div>
          <div class='lose-line text-center'><%= @games.lose_count %></div>
        </div>
        <div class='col-sm-2'>
          <div class='game-draw text-center'>DRAW</div>
          <div class='draw-line text-center'><%= @games.draw_count %></div>
        </div>
      </div>
      <div class='row justify-content-center'>
      </div>
    </div>
  </div>
</div>

<div class='conteiner'>
  <div class='row justify-content-center'>
    <div class='col-sm-10 shadow-sm text-main bg-sub-color-gray p-5 my-sm-5'>
      <div class='mb-sm-5'> 
        <h3 class='col-auto'><span class='display-5'>| </span>観戦記録</h3>
      </div>
      <div>
        <%= render partial: 'shared/game_list', locals: { games: @games } %>
        <%= render partial: 'shared/game_calendar', locals: { games: @games } %>
      </div>
    </div>
  </div>
</div>
